{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "ESNext"
    ],
    "newLine": "lf",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build/",
    "strict": true,
    "target": "es5",
    "resolveJsonModule": true
  },
  "include": [
    "typings/**/*.d.ts",
    "node_modules/@*/types-*/*.d.ts",
    "src/**/*.ts"
  ]
}